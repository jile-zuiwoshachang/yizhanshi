<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yizhanshi.talent.mapper.TalentCommentMapper">

    <resultMap type="com.yizhanshi.talent.domain.TalentComment" id="TalentCommentResult">
        <result property="commentId"     column="comment_id"      />
        <result property="applyId"     column="apply_id"      />
        <result property="commentStar"     column="comment_star"      />
        <result property="commentContent"     column="comment_content"      />
        <result property="status"     column="status"      />
        <result property="delFlag"     column="del_flag"      />
        <result property="createTime"     column="create_time"      />
        <result property="createBy"     column="create_by"      />
        <result property="updateTime"     column="update_time"      />
        <result property="updateBy"     column="update_by"      />
        <result property="remark"     column="remark"      />
        <collection  property="talentApplys"   javaType="com.yizhanshi.talent.domain.TalentApply"  resultMap="TalentApplyResult" />
    </resultMap>
    <resultMap type="com.yizhanshi.talent.domain.TalentApply" id="TalentApplyResult">
    <id     property="applyId"       column="apply_id"      />
    <result property="applyName"       column="apply_name"      />
    <result property="userStudentid"       column="user_studentid"      />
    <result property="talentStudentid"     column="talent_studentid"    />
    <result property="applyContent"     column="apply_content"    />
    <result property="applyStartDay"        column="apply_start_day"        />
    <result property="applyEndDay"        column="apply_end_day"        />
    <result property="recallReason"     column="recallReason"    />
    <result property="refuseReason"     column="refuseReason"    />
    <result property="recallStatus"     column="recallStatus"    />
    <result property="status"     column="status"    />
    <result property="delFlag"     column="del_flag"    />
    </resultMap>

    <sql id="talentCommentSql">
        select tc.comment_id, tc.apply_id,tc.comment_star,tc.comment_content,
        tc.status, tc.del_flag, tc.create_by, tc.create_time, tc.remark,
        ta.apply_id, ta.apply_name, ta.user_studentid,ta.talent_studentid,ta.apply_content,ta.apply_start_day,ta.apply_end_day,
        ta.refuse_reason,ta.recall_status,ta.recall_status, ta.status,ta.del_flag
        from business_talent_comment tc
        left join business_talent_apply ta on ta.apply_id=tc.apply_id
    </sql>
    <select id="selectTalentCommentById" resultType="com.yizhanshi.talent.domain.TalentComment">
        <include refid="talentCommentSql"/>
        where apply_id=#{applyId}
    </select>
    <select id="selectTalentCommentList" resultMap="TalentCommentResult">
      <include refid="talentCommentSql"></include>
        where  ta.del_flag = '0' and tc.del_flag='0'
        <if test="commentId != null and commentId != 0">
            AND tc.commentId = #{commentId}
        </if>
        <if test="applyId != null and applyId != 0">
            AND tc.applyId = #{applyId}
        </if>
        <if test="commentStar != null and commentStar != ''">
            AND tc.commentStar = #{commentStar}
        </if>
        <if test="commentContent != null and commentContent != ''">
            AND tc.commentContent = #{commentContent}
        </if>
        <if test="status != null and status != ''">
            AND tc.status = #{status}
        </if>
        <if test="params.beginTime != null and params.beginTime != ''"><!-- 开始时间检索 -->
            AND date_format(tc.create_time,'%Y%m%d') &gt;= date_format(#{params.beginTime},'%Y%m%d')
        </if>
        <if test="params.endTime != null and params.endTime != ''"><!-- 结束时间检索 -->
            AND date_format(tc.create_time,'%Y%m%d')  &lt;= date_format(#{params.endTime},'%Y%m%d')
        </if>
    </select>
    <insert id="insertTalentComment"  parameterType="com.yizhanshi.talent.domain.TalentComment" useGeneratedKeys="true" keyProperty="commentId">
        insert into business_talent_comment(
        <if test="commentId != null and commentId != 0">comment_id,</if>
        <if test="applyId != null and applyId != 0">apply_id,</if>
        <if test="commentStar != null and commentStar != ''">comment_star,</if>
        <if test="commentContent != null and commentContent != ''">comment_content,</if>
        <if test="status != null and status != ''">status,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        <if test="remark != null and remark != ''">remark,</if>
        create_time
        )values(
        <if test="commentId != null and commentId != 0">#{commentId},</if>
        <if test="applyId != null and applyId != 0">#{applyId},</if>
        <if test="commentStar != null and commentStar != ''">#{commentStar},</if>
        <if test="commentContent != null and commentContent != ''">#{commentContent},</if>
        <if test="status != null and status != ''">#{status},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        <if test="remark != null and remark != ''">#{remark},</if>
        sysdate()
        )
    </insert>
    <update id="updateTalentComment" parameterType="com.yizhanshi.talent.domain.TalentComment">
        update business_talent_comment
        <set>
            <if test="applyId != null and applyId != 0">apply_id=#{applyId},</if>
            <if test="commentStar != null and commentStar != ''">comment_star=#{commentStar},</if>
            <if test="commentContent != null and commentContent != ''">comment_content=#{commentContent},</if>
            <if test="status != null and status != ''">status=#{status},</if>
            <if test="updateBy != null and updateBy != ''">update_by=#{updateBy},</if>
            <if test="remark != null and remark != ''">remark=#{remark},</if>
            update_time = sysdate()
        </set>
        where comment_id = #{commentId}
    </update>
    <delete id="deleteTalentCommentByIds">
        update business_talent_comment set del_flag = '2' where comment_id in
        <foreach collection="array" item="commentId" open="(" separator="," close=")">
            #{commentId}
        </foreach>
    </delete>

</mapper>